{
	"name": "smartodo",
	"displayName": "smarTODO",
	"description": "Smart TODO management",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.91.0"
	},
	"publisher": "jts2052",
	"icon": "resources/images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/jts2052/smartodo.git"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onDidChangeTextDocument",
		"onDidChangeActiveTextEditor"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "smarTODO configuration",
			"properties": {
				"smarTODO.hideCompleted": {
					"type": "boolean",
					"default": false,
					"description": "Hide completed TODOs"
				},
				"smarTODO.enableCompletionHighlights": {
					"type": "boolean",
					"default": true,
					"description": "Enable completion highlights",
					"order": 0
				},
				"smarTODO.completedHighlightColor": {
					"type": "string",
					"default": "rgba(0, 255, 0, 0.3)",
					"description": "Highlight color for completed TODOs",
					"order": 1
				},
				"smarTODO.incompleteHighlightColor": {
					"type": "string",
					"default": "rgba(255, 255, 0, 0.3)",
					"description": "Highlight color for incomplete TODOs",
					"order": 2
				},
				"smarTODO.showCompletionDate": {
					"type": "boolean",
					"default": false,
					"description": "Show completion date",
					"order": 3
				},
				"smarTODO.showCreationDate": {
					"type": "boolean",
					"default": false,
					"description": "Show creation date",
					"order": 4
				},
				"smarTODO.showCreationTime": {
					"type": "boolean",
					"default": false,
					"description": "Show creation time",
					"order": 5
				}
				
			}
		},
		"commands": [
			{
				"command": "smartodo.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "extension.searchTODO",
				"title": "Search TODOs"
			},
			{
				"command": "smarTODO.openSettings",
				"title": "Open smarTODO Settings"
			}
		],
		"languages": [
			{
				"id": "todo",
				"aliases": [
					"TODO",
					"todo"
				],
				"extensions": [
					".TODO"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "todo",
				"scopeName": "source.todo",
				"path": "./syntaxes/todo.tmLanguage.json"
			}
		],
		"keybindings": [
			{
				"command": "extension.searchTODO",
				"key": "ctrl+shift+t",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.91.0",
		"@types/mocha": "^10.0.7",
		"@types/node": "20.x",
		"@typescript-eslint/eslint-plugin": "^7.14.1",
		"@typescript-eslint/parser": "^7.11.0",
		"eslint": "^8.57.0",
		"esbuild": "^0.21.5",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.4.5",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.4.0"
	}
}
